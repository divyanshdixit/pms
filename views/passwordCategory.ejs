<%- include('header') %>

    <div class="row">
        <h1> <%= title %></h1>

      <div class="col-md-12 text-right mb-4">
          <a href="/addnewpasswordcategory" class="btn btn-primary"> Add New Category </a>
      </div>

        <% if(success != ''){ %>
          <div class="alert alert-success">
            <p> <%= success %> </p>
          </div>
        <% } %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Password Category Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>

            <% if(data.length > 0) {
              data.forEach((item) => { %>
                <tr>
                  <td> <%= item.password_category %> </td>
                  <td>
                    <a class="btn btn-primary btn-xs" href="/passwordcategory/edit/<%= item._id %>"> <i class="fa fa-pencil" aria-hidden="true"></i> </a>
                    <a class="btn btn-danger btn-xs" href="/passwordcategory/delete/<%= item._id %>"> <i class="fa fa-trash" aria-hidden="true"></i> </a>
                  </td>
                </tr>
              <% })
            } %>

      </tbody>
    </table>
    </div>
    <%- include('footer') %>
