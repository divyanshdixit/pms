    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

  <script>
    var socket = io();
    var user;

    function setUsername(){
        socket.emit('setusername', $('#name').val())
    }

    socket.on('userSet', function(data){
        user = data.username;

        // document.write('Welcome <strong> '+ user + ' </strong>, You can chat now.<br><br>')
        $('.set-username').css('display', 'none');
        $('#error').css('display', 'none');
        $('.container').append('<div class="row">'+
            '<div class="col-md-12"> <p> Welcome <strong> '+ user + ' </strong>, You can chat now. </p> </div>'+
            '<div class="col-md-12"> <div class="count">' + data.usernumber + ' users are connected! </div> '+
            '<div class="form-group"> <input type="text" class="form-control" id="message"/><br>'+
            '<button type="button" class="btn btn-primary" onclick="sendMessage()"> Send message </button>'+
            '<div id="message-container" class="customBox"> </div> '+
            '</div> </div> ')
    })
    
    function sendMessage(){
        var msg = $('#message').val();
        socket.emit('msg', {message:msg, username:user})
        $('#message').val('')
    }

    socket.on('newmsg', function(data) {
        if(data) {
            $('#message-container').prepend('<div class="col-md-12"><b>' + data.username + '</b>: ' + data.message + '</div><br>') 
        }
    })

    socket.on('userExists', function(data){
        if(data){
            // $('#error').text(data);
            document.getElementById('error').innerHTML = data
        }
        
        
    })

    // socket.on('team_member_count', function(data){
    //     $('body').append(data.number + ' user are connected!');
    // })

    </script>
